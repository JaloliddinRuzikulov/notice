# Application Configuration
NODE_ENV=development
PORT=8444
APP_NAME=Qashqadaryo IIB Xabarnoma Tizimi
APP_NAME_SHORT=Notice
APP_VERSION=2.0.0

# UI Configuration
UI_APP_NAME=Qashqadaryo IIB Xabarnoma Tizimi
UI_APP_NAME_EN=Qashqadaryo Police Notification System
UI_LANGUAGE=uz
UI_THEME=default

# Security
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here
BCRYPT_ROUNDS=10

# Database Configuration
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=notice_db
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_PATH=./data/notice.db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SIP Configuration
SIP_SERVER=10.105.0.3
SIP_PORT=5060
SIP_WEBSOCKET_PORT=8089
SIP_EXTENSIONS=5530,5531,5532
SIP_PASSWORD=your-sip-password
SIP_REALM=asterisk
SIP_USER_AGENT=Notice/2.0

# Asterisk AMI Configuration
AMI_HOST=10.105.0.3
AMI_PORT=5038
AMI_USERNAME=admin
AMI_PASSWORD=your-ami-password

# WebSocket Configuration
WS_PORT=8444
WS_PATH=/ws

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_AUDIO_FORMATS=mp3,wav,ogg
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif

# TTS Configuration
TTS_PROVIDER=google
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-tts.json
VOICERSS_API_KEY=
YANDEX_API_KEY=
ELEVEN_LABS_KEY=

# SMS Gateway Configuration
SMS_ENABLED=false
SMS_API_URL=https://notify.eskiz.uz/api
SMS_LOGIN=your-sms-login
SMS_PASSWORD=your-sms-password
SMS_TEST_MODE=true

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_CONCURRENT_CALLS=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# SSL Configuration
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
METRICS_PORT=9090